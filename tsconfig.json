{
  "include": ["**/*.ts", "**/*.tsx"],
  "compilerOptions": {
    // Source code
    "jsx": "react-jsx",

    // Best practices
    "strict": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "verbatimModuleSyntax": true,

    // Target (Bundler)
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ES2022",
    "noEmit": true,

    // DX
    "paths": {
      "~/*": ["./app/*"]
    }
  }
}
